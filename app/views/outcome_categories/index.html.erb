<div class="mx-auto" style="width: 900px;">
<% pagename = "カテゴリの一覧" %>
  <h1 class="card-title"><%= pagename %></h1>

<br><br>

<table class="table table-hover">
    <thead>
      <tr class="th">
        <th>No</th>
        <th>カテゴリー名</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @outcome_categories.each do |outcome_category| %>
        <tr class="th">
          <td><%= outcome_category[:id] %></td>
          <td><%= outcome_category.name %></td>
          <td></td>
          <td></td>
          <td><%= link_to "編集", edit_outcome_category_path(outcome_category.id), class:"link-btn" %></td>
