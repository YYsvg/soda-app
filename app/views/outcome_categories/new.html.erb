<div class="mx-auto" style="width: 900px;">
  <% pagename = "支出カテゴリの追加" %>
  <h1><%= pagename %></h1>

<%= form_with model: @outcome_category, local: true do |f| %>
    <div class="box-name center">
      <label>カテゴリー名　</label><%= f.text_field :name %>
    </div>
    <%= f.submit "作成する", class:"submit-color" %>
<% end %><br><br><br>


<div>
  <%= link_to "カテゴリ一覧へ", outcome_categories_path, class:"link-btn show back" %>
</div>