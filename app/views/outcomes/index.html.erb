<div class="mx-auto" style="width: 900px;">
<% pagename = "支出の一覧" %>
  <h1 class="card-title"><%= pagename %></h1>

<br><br>

<table class="table table-hover">
    <thead>
      <tr class="th">
        <th>No</th>
        <th>カテゴリー</th>
        <th>金額(円)</th>
        <th>内容</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @outcomes.each do |outcome| %>
        <% if outcome.user_id == current_user.id %>
          <tr class="th">
            <td><%= outcome[:id] %></td>
            <td><%= outcome.outcome_category.name %></td>
            <td><%= outcome.price.to_s(:delimited) %></td>
            <td><%= outcome.memo %></td>
            <td><%= image_tag outcome.image.thumb50.url %>
            <td><%= link_to "詳細", outcome_path(outcome), class: "link-btn show" %></td>
            <td><%= link_to "削除", outcome_path(outcome.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class:"link-btn" %></td>
          </tr>
          <tr></tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

</div>
</div>

