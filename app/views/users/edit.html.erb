<hr>

<h1>ユーザーの編集画面</h1>
<hr>

<div>
  <%= form_with url: mypage_users_path, local: true, method: :put do |f| %>
  <div>
    <%= f.label :name, "なまえを変更できます" %>
    <p>現在のなまえ：<%= @user.name %></p>
  </div>
 
 <div>
 <%= f.text_field :name,
    autofocus: true,
    required: true,
    autocomplete: "name",
    placeholder: "名前を入力"
  %>
 </div>

  <div>
    <%= f.submit "保存" %>
  </div>
 <% end %>
</div>

<div><%= link_to "マイページへ", mypage_users_path %></div>
<div><%= link_to "トップページへもどる", root_path %></div>