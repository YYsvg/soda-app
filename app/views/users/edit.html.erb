<div class="mx-auto col-sm-9" style="width: 700px;">
  <% pagename = "なまえの編集" %>
  <h1><%= pagename %></h1>

  <%= form_with url: mypage_users_path, local: true, method: :put do |f| %>
    <div class="box-name center">
      <label>なまえを変更できます</label><%= f.text_field :name, placeholder: "名前を入力", class:"home" %>
      <p><%= "現在のなまえ：#{current_user.name}" %></p>
    </div>

<br><br>

  <div>
    <%= f.submit "保存する", class:"link-btn new" %>
  </div>
 <% end %>
</div>

<div><%= link_to "トップページへもどる", homes_path, class:"submit-color" %></div>