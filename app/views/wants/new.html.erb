<div class="mx-auto" style="width: 400px;">
  <% pagename = "これからやりたいことの入力画面" %>
  <h1><%= pagename %></h1>

  <%= form_with model: @want, local: true do |f| %>
  
    <div>
      <%= f.label :memo,"メモ" %>
      <%= f.text_area :memo,  placeholder: "やりたいことを書こう！", size: "50x10"%>
    </div>

    <div>
      <%= f.label :image,"イメージ図" %>
      <%= f.file_field :image %>
    </div>

    ＊カラム追加はまだ＊
    <div>
      <%= f.label :price,"予算" %>
      <%= f.number_field :price %>円
    </div>

    <div><%= f.submit "入力する" %></div>
  <% end %>

  <div>
    <%= link_to "やりたいことの一覧へ", :wants %>
    <%= link_to "作成、編集、削除", :new_want %>
  </div>
  <div>
    <%= link_to "トップページへ戻る", root_path %>
  </div>