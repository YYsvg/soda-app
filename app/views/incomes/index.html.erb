<div class="mx-auto" style="width: 700px;">
<% pagename = "収入の一覧" %>
  <h1 class="card-title"><%= pagename %></h1>

<br><br>

<table class="table table-hover">
    <thead>
      <tr>
        <th>No</th>
        <th>カテゴリー</th>
        <th>金額(円)</th>
        <th>内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @incomes.each do |income| %>
        <tr>
          <td><%= income[:id] %></td>
          <td><%= income.income_category.name %></td>
          <td><%= income.price %></td>
          <td><%= income.memo %></td>
          <td><%= image_tag income.image.thumb50.url %>
          <td><%= link_to "詳細", income_path(income), class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to "編集", edit_income_path(income.id) %></td>
          <td><%= link_to "削除", income_path(income.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to "トップページへ戻る", root_path %>
  </div>



</div>




