<div class="mx-auto" style="width: 300px;">
  <% pagename = "収入の入力画面" %>
  <h1><%= pagename %></h1>

  <%= form_with model: @income, local: true, html: { multipart: true } do |f| %>
  
    <div>
      <label>金額　</label><%= f.number_field :price  %>
    </div>
    <div>
      <label>メモ　 </label><%= f.text_field :memo %>
    </div>
    <div>
      <div>
        <%= f.radio_button(:income_category_id, 1) %>
        <%= f.label :income_category_id, "おこづかい", {value: :income_category_id, style: "display: inline-block;"} %>
      </div>
      <div>
        <%= f.radio_button(:income_category_id, 2) %>
        <%= f.label :income_category_id, "おてつだい", {value: :income_category_id, style: "display: inline-block;"} %>
      </div>
      <div>
        <%= f.radio_button(:income_category_id, 3) %>
        <%= f.label :income_category_id, "お年玉", {value: :income_category_id, style: "display: inline-block;"} %>
      </div>
    </div>

    <div>
      <%= image_tag @income.image.thumb50.url %>
    </div>

    <div><%= f.submit "入力する" %></div>
  <% end %>

  <div>
    <%= link_to "収入の一覧へ", :incomes %>
  </div>
  <div>
    <%= link_to "トップページへ戻る", root_path %>
  </div>