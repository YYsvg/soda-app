  <p>income_form</p>
  <%= form_with model: @income, local: true do |f| %>
    <div>
      <%= f.label :price,"金額" %>
      <%= f.number_field :price  %>
    </div>
    <div>
      <%= f.label :memo,"メモ" %>
      <%= f.text_field :memo %>
    </div>
    <div>
      <% @income_categories. each do |income_category| %>
      <div>
        <%= f.radio_button(:income_category_id, "#{income_category.id}" ) %>
        <%= f.label :income_category_id, "#{income_category.name}", {value: income_category.id.to_i, style: "display: inline-block;"} %>
      </div>
      <% end %>
    </div>
    <div>
      <%= f.label :image,"写真" %>
      <%= f.file_field :image %>
    </div>
    <div><%= f.submit "入力する" %></div>
  <% end %>

  <div>
    <%= link_to "収入の一覧へ", :incomes %>
    <%= link_to "カテゴリの作成、編集、削除", :new_income_category %>
  </div>